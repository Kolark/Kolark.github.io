---
const { info } = Astro.props;
---

<div class="project_card">
    <div class="project_info">
        <h1 class="project_info-title">{info.title}</h1>
        <p>{info.description}</p>
        <br />
        <div class="stack_list">
            {info.stack.map((e) => <p class="stack_element">{e}</p>)}
        </div>
        <br />
        <div class="links_list">
            {
                info.links.map((e) => (
                    <a href={e.url} target="_blank">
                        {" "}
                        {e.name}
                    </a>
                ))
            }
        </div>
        <br />
        {
            !info.draft && (
                <div>
                    <a class="project_link" href={`/projects/${info.slug}`}>
                        See more
                    </a>
                    <br />
                    <br />
                </div>
            )
        }
        <!-- <br /> -->
        <div class="project_date">{info.date}</div>
    </div>
    <div class="project_img">
        <img src=`imgs/${info.img}` alt="" />
    </div>
</div>

<style>
    .project_card {
        display: grid;
        width: 100%;
        grid-template-columns: 1fr 1fr;
        grid-auto-rows: min-content;

        background-color: cornflowerblue;
    }
    .project_info {
        position: relative;
        /* height: fit-content; */
        width: 100%;
        padding: 2vh;
        font-family: "Manrope";
    }

    .project_info-title {
        font-weight: 700;
    }

    .project_img {
        height: 100%;
        width: 100%;

        position: relative;
        min-height: 0;
        overflow: hidden;
    }

    .project_img img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .stack_list {
        display: flex;
        flex-direction: row;
        gap: 0.5rem;
    }

    .stack_element {
        font-weight: 700;
    }

    .links_list {
        font-weight: 700;
    }

    .links_list a:link {
        color: rgb(29, 29, 29);
    }

    .project_date {
        font-size: 0.7rem;
    }

    .project_link {
        font-family: "Manrope";
    }

    @media only screen and (max-width: 768px) {
        .project_card {
            grid-template-rows: auto 1fr;
            grid-template-columns: 1fr;
            background-color: cornflowerblue;
        }

        .project_img {
            max-height: 400px;
        }

        .project_img img {
            position: relative;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }
</style>
